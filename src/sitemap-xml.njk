---
permalink: /sitemap.xml
layout: null
eleventyExcludeFromCollections: true
sitemap:
  ignore: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for item in collections.all -%}
  {%- if not item.data.sitemap.ignore == true %}
  <url>
    <loc>{{ item.url | absoluteUrl(site.url) }}</loc>
    <lastmod>{{ item.date.toISOString() }}</lastmod>
    {%- if item.data.sitemap.changefreq -%}
      <changefreq>{{ item.data.sitemap.changefreq }}</changefreq>
    {%- endif -%}
    {%- if item.data.sitemap.priority -%}
      <priority>{{ item.data.sitemap.priority }}</priority>
    {%- endif -%}
  </url>
  {%- endif -%}
{%- endfor -%}

{%- for item in pages -%}{% set pagesUrl %}{{ item.permalink }}{% endset %}
  <url>
    <loc>{{  pagesUrl | absoluteUrl(site.url) }}</loc>
    <changefreq>monthly</changefreq><priority>0.6</priority>
  </url>
  {%- endfor -%}

  {%- for item in articles -%}{% set articleUrl %}/news/{{ item.Title | slugify }}/{% endset %}
  <url>
    <loc>{{  articleUrl | absoluteUrl(site.url) }}</loc>
    <changefreq>monthly</changefreq><priority>0.5</priority>
  </url>
{%- endfor -%}

{%- for item in products -%}{% set prodUrl %}/products/{{ item.Title | slugify }}/{% endset %}
  <url>
    <loc>{{  prodUrl | absoluteUrl(site.url) }}</loc>
    <changefreq>monthly</changefreq><priority>0.5</priority>
  </url>
{%- endfor -%}
</urlset>
